{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "classic",
    "declaration": false,
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "atom": {
    "compileOnSave": false,
    "rewriteTsconfig": false
  }
}
